<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 <mapper namespace="com.bsg.api.dao.BookDao">
    <resultMap id="ResultMap" type="com.bsg.api.entity.BookEntity">
        <result property="id" column="id"></result>
        <result property="number" column="number"></result>
        <result property="price" column="price"></result>
    </resultMap>
    <!-- 根据条件检索全部 -->
    <select id="list" parameterType="java.util.Map" resultMap="ResultMap">
        SELECT  b.*
        FROM tbl_book b
        <if test="id!=null">
            AND b.id = #{id}
        </if>
    </select>

    <select id="get" resultMap="ResultMap">
        SELECT  *
        FROM  tbl_book
        WHERE id = #{id}
    </select>

    <insert id="save" parameterType="com.bsg.api.entity.BookEntity">
        INSERT INTO tbl_book
        (
        id,
        number,
        price
        )
        VALUE
        (
        #{id},
        #{number},
        #{price}
        )
    </insert>
    
    <update id="update" parameterType="com.bsg.api.entity.BookEntity">
        UPDATE tbl_book
        <set>
            <if test="number != null">
                number =#{number},
            </if>
            <if test="price != null">
                price =#{price}
            </if>
        </set>
        WHERE  id = #{id}
    </update>

    <delete id="remove" >
        DELETE FROM tbl_book
        WHERE id = #{id}
    </delete>

</mapper>